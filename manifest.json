{
  "manifest_version": 3,
  "name": "Pinterest Ad Blocker",
  "version": "1.0.0",
  "description": "屏蔽Pinterest网站内的广告内容",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.pinterest.com/*",
    "*://*.pinterest.cn/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.pinterest.com/*",
        "*://*.pinterest.cn/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pinterest Ad Blocker",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
